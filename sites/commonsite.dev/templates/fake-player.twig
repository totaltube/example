<!DOCTYPE html>
<html lang="{{ lang.Id }}">
<head>
    <title>{{ content_item.Title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% canonical %}
    {% alternates %}
    <link type="text/css" rel="stylesheet" href="{{ static("main.css") }}">
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        body {
            background: #222;
        }
        #iframe {
            position: absolute;
            z-index: -1;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        #play {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
    </style>
</head>
<body style="overflow: hidden">
{% if content_item.Type == "video-link" %}
    <img src="{{ content_item.Thumb() }}"
         width="{{ content_item.ThumbsWidth }}"
         height="{{ content_item.ThumbsHeight }}"
         alt="{{ content_item.Title }}"
         id="iframe">
    <div class="play-button"><a href="{{ content_item.Link }}" target="_blank" rel="noopener nofollow"><i class="icon-play"></i></a></div>
{% endif %}
</body>
</html>